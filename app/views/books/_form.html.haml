= simple_form_for @book, html: { multipart: true } do |f|
  - if @book.errors.any?
    #errors
      %h2= "#{pluralize(@book.errors.count, "error")} prohibited this book from being saved:"
      %ul
        - @book.errors.full_messages.each do |msg|
          %li= msg
  .panel-body
    = f.input :author, input_html: { class: 'form-control' }
    = f.input :title, input_html: { class: 'form-control' }
    = f.input :description, input_html: { class: 'form-control' }
    = f.input :ISBN_number, input_html: { class: 'form-control' }
    = f.input :page_count, input_html: { class: 'form-control' }
    = f.input :year, input_html: { class: 'form-control' }
    = f.input :publisher, input_html: { class: 'form-control' }
    = f.input :cover, as: :file, input_html: { class: 'form-control' }
    = f.button :submit, class: "btn btn-primary add-button"
