= form_for @book do |f|
  - if @book.errors.any?
    #error_explanation
      %h2= "#{pluralize(@book.errors.count, "error")} prohibited this book from being saved:"
      %ul
        - @book.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :author
    = f.text_field :author
  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :ISBN_number
    = f.text_field :ISBN_number
  .field
    = f.label :page_count
    = f.number_field :page_count
  .field
    = f.label :year
    = f.number_field :year
  .field
    = f.label :publisher
    = f.text_field :publisher
  .actions
    = f.submit 'Save'
